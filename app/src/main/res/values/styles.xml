<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="BaseTheme" />

    <style name="BaseTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarStyle">@style/ActionBarStyle</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:fontFamily">@font/custom_font</item>
    </style>

    <style name="ActionBarStyle" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="elevation">0dp</item>
    </style>

    <style name="ProgressBarStyle">
        <item name="colorAccent">@color/progressBarColor</item>
    </style>

    <style name="NavigationView" >
        <item name="fontFamily">@font/custom_font</item>
    </style>

    <style name="MaterialButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="MaterialButtonStyleRounded" parent="Widget.MaterialComponents.Button">
        <item name="cornerSize">50%</item>
        <item name="backgroundTint">@color/colorPlayButton</item>
        <item name="elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="ShapeAppearance.Image.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/corner_radius</item>
    </style>

    <style name="ShapeAppearance.Image.Circular" parent="">
        <item name="cornerSize">50%</item>
        <item name="backgroundTint">#000000</item>
    </style>

</resources>